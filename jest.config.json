{
  "moduleFileExtensions": ["ts", "js", "json"],
  "testMatch": ["<rootDir>/test/**/*.(spec|test).ts|tsx"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "diagnostics": false
      }
    ]
  },
  "testEnvironment": "node",
  "reporters": ["default"],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/coverage/",
    "<rootDir>/test/utils/",
    "<rootDir>/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  }
}
